# Backend Environment Variables

# OpenAI API Key (Whisper API用)
OPENAI_API_KEY=your_openai_api_key_here

# Notion Integration
NOTION_TOKEN=your_notion_integration_token_here
NOTION_USER_DATABASE_ID=your_user_database_id_here
NOTION_CONVERSATION_DB_ID=your_conversation_logs_database_id_here
NOTION_FEEDBACK_DB_ID=your_feedback_logs_database_id_here
NOTION_LESSONS_DB_ID=your_lessons_database_id_here

# Authentication (認証設定)
JWT_SECRET_KEY=your-secret-key-change-this-in-production
COOKIE_SECURE=false  # 開発環境ではfalse、本番環境ではtrue

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
